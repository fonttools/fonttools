languagesystem latn DEU;
languagesystem latn FRA;
languagesystem latn ITA;

feature hlig {
  script latn;
  language DEU exclude_dflt required;
  sub D E U by D.sc;

  language FRA exclude_dflt;
  sub F R A by F.sc;
} hlig;

feature liga {
  language ITA exclude_dflt required;
  sub I T A by I.sc;
} liga;

feature scmp {
  sub [a-z] by [A.sc-Z.sc];
} scmp;
